##  Alias  ##
alias l="ls -F"
alias ll="ls -lF"
alias la="ls -aF"
alias check="emerge -vp" 
alias gmail="mutt -F ~/.mutt/.muttrc"
alias lumac="mutt -F ~/.mutt/lumac/.muttrc"
alias ctmux="~/.scrips/tmux.sh"
alias mouseon="tmux set-option -g -t Local-Session mouse-select-pane on ; tmux set-option -g -t Local-Session mouse-select-window on"
alias mouseoff="tmux set-option -g -t Local-Session mouse-select-pane off ; tmux set-option -g -t Local-Session mouse-select-window off"
alias setmouse="~/.scrips/mouse-MODE.sh"
alias bvim="~/.scrips/vim.pl"
alias flags="equery u"
alias afiles="equery f"
alias bfiles="equery f -f=cmd"
alias cfiles="equery f -f=conf"
alias belong="equery b"
alias pstree="pstree -psan"
alias eix="eix -v"
alias search="eix -vS"
alias grep="grep -i --color"
alias process="ps -o pcpu,ppid,user,pid,pri,command -C"
alias s_upgrade="/usr/bin/eix -I --pure-packages --format '{upgrade=1} <category>/<name>\n{}'"
alias s_donwgrade="/usr/bin/eix -I --pure-packages --format '{downgrade=1} <category>/<name>\n{}'"
alias cdawesome="cd ~/.config/awesome"
alias mount="mount | column -t"
